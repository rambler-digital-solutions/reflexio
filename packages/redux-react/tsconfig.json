{
    "compilerOptions": {
      "lib": [
        "dom.iterable",
        "es2015",
        "es2016.array.include",
        "es2017.object",
        "es2017.string",
        "es2018.promise",
        "esnext",
        "es2017",
        "dom",
      ],
      "baseUrl": "./",
      "outDir": "./dist",
      "sourceMap": true,
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "allowJs": true,
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "downlevelIteration": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "include": [
      "lib/**/*.ts",
      "*.ts",
      "package.json"
    ],
    "exclude": [
      "node_modules",
      "lib/**/*.js",
      "build",
    ],
  }